<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yusuf.sercan.studyjamlesson21.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/isim" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adet"
        android:textSize="30sp"
        android:id="@+id/adetyazisi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Süt"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:id="@+id/sütlü" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çikolata"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:id="@+id/cikolatali" />


    <LinearLayout
    android:layout_width="150dp"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:layout_below="@+id/adetyazisi">
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="+"
        android:layout_marginRight="10dp"
        android:id="@+id/arti"
        android:onClick="arttir"
        android:layout_below="@+id/adetyazisi"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingLeft="8dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        android:id="@+id/adet"
        android:layout_below="@+id/arti"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_marginLeft="10dp"
        android:id="@+id/eksi"
        android:onClick="azalt"
        android:layout_weight="1"
        android:layout_below="@+id/adet"
        android:layout_alignParentStart="true"/>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiyat"
        android:textSize="40sp"
        android:id="@+id/fiyatyazisi"
        android:layout_below="@+id/layout"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:id="@+id/fiyat"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fiyatyazisi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sipariş Ver"
        android:id="@+id/siparis"
        android:textSize="30sp"
        android:onClick="siparis"
        android:layout_below="@+id/fiyat"
        android:layout_alignParentStart="true" />

</LinearLayout>
</ScrollView>